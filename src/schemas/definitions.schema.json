{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Shared Definitions",
  "definitions": {
    "hexColor": {
      "type": "string",
      "format": "color-hex",
      "pattern": "^#([A-Fa-f0-9]{3}|[A-Fa-f0-9]{4}|[A-Fa-f0-9]{6}|[A-Fa-f0-9]{8})$",
      "description": "A hex color code (e.g. #000000)."
    },
    "hexOpacity": {
      "type": "string",
      "pattern": "^[A-Fa-f0-9]{2}$",
      "description": "A 2-digit hex alpha value (00-FF)."
    }
  }
}
